# ===========================================
# MOA Environment Configuration
# Copy this file to .env and fill in the values
# ===========================================

# Database
DATABASE_URL=postgresql+asyncpg://moa:moa_dev_password@localhost:5432/moa

# Redis
REDIS_URL=redis://localhost:6379

# MinIO / S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=moa_minio
MINIO_SECRET_KEY=moa_minio_password
MINIO_BUCKET=moa-audio
MINIO_USE_SSL=false

# Naver Clova Speech API
CLOVA_API_KEY=your_clova_api_key_here
CLOVA_API_SECRET=your_clova_api_secret_here
CLOVA_INVOKE_URL=https://clovaspeech-gw.ncloud.com/recog/v1/stt

# Claude API (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# App Settings
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# MOA Environment Configuration
# Copy this file to .env and fill in the values
# ===========================================

# IMPORTANT: Docker Compose 환경에서는 localhost 대신 서비스명 사용!
# - 로컬 개발: localhost:5432, localhost:6379, localhost:9000
# - Docker 환경: db:5432, redis:6379, minio:9000

# Database
# Docker: postgresql+asyncpg://moa:moa_dev_password@db:5432/moa
# Local:  postgresql+asyncpg://moa:moa_dev_password@localhost:5432/moa
DATABASE_URL=postgresql+asyncpg://moa:moa_dev_password@db:5432/moa

# Redis
# Docker: redis://redis:6379
# Local:  redis://localhost:6379
REDIS_URL=redis://redis:6379

# MinIO / S3 Storage
# Docker: minio:9000
# Local:  localhost:9000
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=moa_minio
MINIO_SECRET_KEY=moa_minio_password
MINIO_BUCKET=moa-audio
MINIO_USE_SSL=false

# Naver Clova Speech API
CLOVA_API_KEY=your_clova_api_key_here
CLOVA_API_SECRET=your_clova_api_secret_here
CLOVA_INVOKE_URL=https://clovaspeech-gw.ncloud.com/recog/v1/stt

# Claude API (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here

# Slack Webhook Integration (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_DEFAULT_CHANNEL=#moa-notifications

# Google Calendar Integration
GOOGLE_CALENDAR_CREDENTIALS=path/to/credentials.json

# Notion Integration
NOTION_API_KEY=secret_your_notion_api_key

# Jira Integration
JIRA_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# App Settings
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# MCP Server Integrations (Optional)
# Enable the integrations you want to use
# ===========================================

# Jira MCP Server
JIRA_MCP_ENABLED=false
JIRA_SERVER_URL=https://your-company.atlassian.net
JIRA_API_TOKEN=your_jira_api_token_here
JIRA_DEFAULT_PROJECT=MEETING

# Google Calendar MCP Server
GCAL_MCP_ENABLED=false
GCAL_CREDENTIALS_PATH=/path/to/google-credentials.json

# Notion MCP Server
NOTION_MCP_ENABLED=false
NOTION_API_KEY=your_notion_api_key_here

# Slack MCP Server
SLACK_MCP_ENABLED=false
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
